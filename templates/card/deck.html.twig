{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}

{% block body %}
<h1>{{ title }}</h1>
<div class="all-cards">

{% if (title == "Shuffled deck") %}
    {% for card in cards %}
        <img class="card" src="../../img/cards{{ asset(card) }}" alt="{{ card }}">
    {% endfor %}
{% else %}
    {% for card in cards %}
        <img class="card" src="../img/cards{{ asset(card) }}" alt="{{ card }}">
    {% endfor %}
{% endif %}

</div>

{% endblock %}