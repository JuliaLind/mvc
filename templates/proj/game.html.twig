<div class="outer-grid-container">

<div class="game-grid house-grid">
    {% for i in 0..4 %}
        {% for j in 0..4 %}
            {% if house[i][j] != "" %}
                <div class="slot grid-row-{{i}} grid-col-{{j}}"><img src="{{ asset(house[i][j]['img']) }}" alt="{{ house[i][j]['alt'] }}"></div>
            {% else %}
                <button class="slot empty-slot suggested grid-row{{i}} grid-col-{{j}}" type="submit" onClick="this.form.action='{{ path('proj-round', {row: i, col: j}) }}';"></button>
            {% endif %}
        {% endfor %}
    {% endfor %}
{# <button class="slot empty-slot player-slot grid-row-0 grid-col-0" type="submit"></button>
<div class="slot player-slot grid-row-1 grid-col-1"><img src="{{ asset('img/project/cards/12S.svg') }}" alt="spelkort"></div> #}

</div>

<div class="center-grid">
test test test
</div>

<div class="game-grid player-grid">
    {% for k in 0..4 %}
        {% for l in 0..4 %}
            {% if player[k][l] != "" %}
                <div class="slot grid-row-{{k}} grid-col-{{l}}"><img src="{{ asset(player[k][l]['img']) }}" alt="{{ house[k][l]['alt'] }}"></div>
            {% elseif game.message != "" and game.suggestedSlot[0] == k and game.suggestedSlot[1] == l %}
                <button class="slot empty-slot player-slot suggested grid-row{{k}} grid-col-{{l}}" type="submit" onClick="this.form.action='{{ path('proj-round', {row: k, col: l}) }}';">SUGGESTED</button>
            {% else %}
                <button class="slot empty-slot player-slot grid-row{{k}} grid-col-{{l}}" type="submit" onClick="this.form.action='{{ path('proj-round', {row: k, col: l}) }}';"></button>
            {% endif %}
        {% endfor %}
    {% endfor %}
</div>

</div>



